
<form method="post">
    <fieldset>
        <div class="formbuilder-text form-group field-title">
            <label for="title" class="formbuilder-text-label">Title<span class="formbuilder-required">*</span></label>
            <input type="text" class="form-control" name="title" access="false" maxlength="255" id="title" required="required" aria-required="true">
        </div>
        <div class="formbuilder-textarea form-group field-author">
            <label for="author" class="formbuilder-text-label">Author<span class="formbuilder-required">*</span></label>
            <input type="text" class="form-control" name="author" access="false" maxlength="255" id="author" required="required">
        </div>
        <div class="formbuilder-textarea form-group field-author">
            <label for="isbn" class="formbuilder-text-label">ISBN<span class="formbuilder-required">*</span></label>
            <input type="text" class="form-control" name="isbn" access="false" maxlength="255" id="isbn" required="required">
        </div>
        <div class="formbuilder-text form-group field-description">
            <label for="description" class="formbuilder-textarea-label">Description</label>
            <input type="text" class="form-control" name="description" access="false" maxlength="255" id="description">
        </div>
        <div class="formbuilder-text form-group field-img">
            <label for="img" class="formbuilder-text-label">Img path
            <input type="text" class="form-control" name="img" access="false" id="img" title="img/">
        </div>
        <div class="formbuilder-date form-group field-release">
            <label for="release" class="formbuilder-date-label">Release Date
                <br>
            </label>
            <input type="date" class="form-control" name="release" access="false" id="release">
        </div>
        <div class="formbuilder-text form-group field-description">
            <label for="category" class="formbuilder-textarea-label">Category</label>
            <input type="text" class="form-control" name="category" access="false" maxlength="255" id="category">
        </div>
        <div class="formbuilder-text form-group field-description">
            <label for="language" class="formbuilder-textarea-label">Language</label>
            <input type="text" class="form-control" name="language" access="false" maxlength="255" id="language">
        </div>
        <div class="formbuilder-button form-group field-add">
            <input type="submit" value="Add">
        </div>
        <p>* - required </p>
    </fieldset>
</form>