{% extends 'base.html.twig' %}

{% block title %}Add book{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    
    <div class="book-container">

    <div class="book-img">
        {% if (book.img) %}
        <img  src="{{ asset(book.img) }}">
        {% endif %}
        <div>
            <h6>Kategori: {{book.category}}</h6>
            <h6>Spr√•k: {{book.language}}</h6>
            <h6>Utgivningsdatum: {{book.releaseDate|date('Y-m-d') }}</h6>
            <h6>ISBN: {{book.isbn}}</h6>
        </div>
    </div>
    <div class="book-info">
        <h2>{{book.title}}</h2>
        <h5>{{book.author}}</h5>

        <p>{{book.description}}</p>
    </div>
    </div>
    <div>
    <a href={{ path("book_show_all")}}><h5>&larr; Tillbaka</h5></a>
    <a href={{ path("edit-book", {"bookId": book.id })}}><button>Update</button></a>
    <a href={{ path("delete-book", {"bookId": book.id })}}><button>Delete</button></a>
    </div>
</div>
{% endblock %}
